# -*- coding: cp1251 -*-
pets = {}

name = input("Введите имя питомца: ")

pet_info = {
    'Вид питомца': input("Введите вид питомца: "),
    'Возраст питомца': int(input("Введите возраст питомца: ")),
    'Имя владельца': input("Введите имя владельца: ")
}

pets[name] = pet_info

# Вывод информации о питомце
age_suffix = "год" if pet_info['Возраст питомца'] == 1 else "года" if 1 < pet_info['Возраст питомца'] < 5 else "лет"
print(f"Это {pet_info['Вид питомца']} по кличке \"{name}\". Возраст питомца: {pet_info['Возраст питомца']} {age_suffix}. Имя владельца: {pet_info['Имя владельца']}")
